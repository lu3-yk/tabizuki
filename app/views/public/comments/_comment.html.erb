<% tweet.comments.each do |comment| %>
  <table class="table">
    <tr>
      <td style="width: 40%">
        <%= link_to user_path(comment.user.id) do %>
          <%= image_tag comment.user.get_profile_image(50,50), class: "user-icon" %>
          <%= comment.user.name %><br>
        <% end %>
          <%= comment.created_at.strftime('%Y/%m/%d') %>
      </td>
      <td style="width: 45%">
        <%= comment.comment %>
      </td>
      <td style="width: 15%">
        <% if comment.user == current_user %>
          <%= link_to "削除", tweet_comment_path(comment.tweet, comment),remote: true, method: :delete %>
        <% end %>
      </td>
    </tr>
  </table>
<% end %>
<p>コメント件数：<%= tweet.comments.count %></p>
<div>
  <%= form_with(model: [tweet, comment],local: false) do |f| %>
    <!--エラーメッセージ-->
    <%= render 'layouts/error_message', model: f.object %>
    <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに",size: " 50 x 3 " %>
    <div style="text-align:right">
      <%= f.submit "送信する" %>
    </div>
  <% end %>
</div>
