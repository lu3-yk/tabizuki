<h1>投稿を編集</h1>
<div>
  <%= image_tag @tweet.user.get_profile_image(50,50), class: "user-icon" %>
  <%= @tweet.user.name %>
  <%= image_tag @tweet.get_image(500, 500) %>
</div>
<%= form_with model: @tweet do |f| %>
  <label for="inputName">行きたい場所を編集</label>
    <%= f.text_field :title, autofocus: true %>
  <label for="inputImage">詳細を編集</label>
    <%= f.text_area :body %>
    <%= f.submit "変更を保存" %>
<% end %>