<h1>新規投稿</h1>
  <%= form_with model: @tweet do |f| %>
    <!--エラーメッセージ-->
    <%= render 'layouts/error_message', model: f.object %>
    <%= f.label :行きたい場所の写真 %>
    <%= f.file_field :image,accept: "image/*" %>

    <%= f.label :都道府県 %>
    <%= f.collection_select :prefecture_id, Prefecture.all, :id, :name, { prompt: '選択してください' } %>
    
    <%= f.label :タイトル %>
    <%= f.text_field :title, placeholder:"〜へいきたい！など" %>

    <%= f.label :詳細コメント %>
    <%= f.text_area :body, placeholder:"〇〇市〇〇町/観光地名やお店の名前/魅力ポイントなど" %>

    <%= f.submit '投稿' %>
  <% end %>