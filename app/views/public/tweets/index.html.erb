<div class="container">
  <div class= "row">
    <div class="col-md-1">
      <%= render "public/users/info",user:@user %>
    </div>
    <div class="col-md-11">
      <h1>投稿一覧</h1>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th></th>
            <th>行きたい場所</th>
            <th>詳細</th>
          </tr>
        </thead>
        <tbody>
        <% @tweets.each do |tweet| %>
          <tr>
            <td><%= image_tag 'no_img.png' %></td>
            <!--#プロフィール画像後から追加する＆ユーザ名呼び出せない-->
            <td><%= image_tag tweet.get_image(100, 100) %></td>
            <td><%= tweet.title %></td>
            <td><%= tweet.body %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>