<div class="col-lg-8">
  <div class="row shadow-lg">
    <div class="col-12">
      <div class="row" style="background-color: #D7EEFF">
        <div class="col-3"></div>
        <div class="col-6 h2 p-2 text-center">行ってみたい場所の写真</div>
        <div class="col-3 h2 p-2 text-center">都道府県</div>
      </div>
      <% tweets.each do |tweet| %>
        <div class="row my-3" style="background-color: #FFFFFF;">
          <div class="col-12 col-md-3 text-center">
            <%= link_to user_path(tweet.user.id) do %>
              <%= image_tag tweet.user.get_profile_image(50,50), class: "user-icon" %><br>
              <div class="h4 mt-2">
                <%= tweet.user.name %>
              </div>
            <% end %>
            <div class="mt-5">
              <%= render "public/relationships/follow_btn", user: tweet.user %>
            </div>
          </div>
          <div class="col-6 col-md-6">
            <%= link_to tweet_path(tweet.id) do %>
               <%= image_tag tweet.get_image(400, 400), style: "width: 100%;" %>
            <% end %>
          </div>
          <div class="col-3 col-md-3 h4 text-center"><%= tweet.prefecture.name %></div>
        <div class="row">
          <div class="col-12">
              <h5><%= tweet.title %></h5>
          </div>
          <div class="col-12">
              <p><%= tweet.body %></p>
          </div>
        </div>
        <div class="row">
          <div class="col-3">
            投稿日<%= tweet.created_at.strftime('%Y/%m/%d') %>
          </div>
          <div class="col-6">
            &nbsp;<br>
            <%= link_to  "詳細",tweet_path(tweet.id),class: "btn btn-outline-info btn-sm" %>&emsp;
            <% if tweet.user == current_user %>
              <%= link_to "編集", edit_tweet_path(tweet), class: "btn btn-outline-success btn-sm" %>&emsp;
              <%= link_to "削除", tweet_path(tweet), method: :delete,data: { confirm: '削除しますか？' }, class: "btn btn-outline-danger btn-sm" %>
            <% end %>
          </div>
          <div class="col-3">
            <div class="d-flex justify-content-end">
              <!--いいね機能-->
              <div id = "like_btn_<%= tweet.id %>">
                <%= render "public/likes/likes", tweet: tweet %>
              </div>&emsp;
              <!--コメント機能-->
              <div>
                <%= link_to tweet_path(tweet.id) do %>
                  <i class="far fa-comment fa-2x comment"></i><%= tweet.comments.count %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
        </div>
        <div style="background-color: #D7EEFF; border-bottom:4px solid #D7EEFF;margin-top: 5px;margin-bottom: 10px;">
        </div>
      <% end %>
    </div>
  </div>