<div>
  <%= image_tag @tweet.user.get_profile_image(50,50), class: "user-icon" %>
  <%= @tweet.user.name %>
  <%= image_tag @tweet.get_image(550, 550) %>
</div>
<%= @tweet.title %><br>
<%= @tweet.body %>
<% if @tweet.user == current_user %>
  <%= link_to "編集", edit_tweet_path(@tweet) %>
  <%= link_to "削除", tweet_path(@tweet), method: :delete %>
<% end %>
<!--いいね機能-->
<%= render "public/likes/likes", tweet: @tweet %>
<!--コメント機能-->
<%= render "public/comments/comment", tweet: @tweet,comment: @comment %>
