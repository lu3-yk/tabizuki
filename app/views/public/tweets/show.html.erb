<div class="container">
  <div class="row mt-4">
    <div class="col-sm-7">
      <div class="row">
        <div class="col-3 text-center">
          <%= link_to user_path(@tweet.user.id) do %>
            <%= image_tag @tweet.user.get_profile_image(150,150), class: "user-icon" %><br>
            <%= @tweet.user.name %>
          <% end %>
        </div>
        <div class="col-9">
          <%= image_tag @tweet.get_image(400, 400),style: "width: 100%;" %>
        </div>
      </div>

      <div class="mt-3">
        <h2 class="h2"><%= @tweet.prefecture.name %></h2>
        <h4 class="h4"><%= @tweet.title %></h4>
        <p class="p"><%= @tweet.body %></p>
      </div>
      <!--いいね機能-->
      <div class="row">
        <div class="col-12 mb-2 btn text-right">
          <div id="like_btn_<%= @tweet.id %>">
            <%= render "public/likes/likes", tweet: @tweet %>
          </div>
        </div>
      </div>
      <div style="text-align:right" class="p">
        投稿日<%= @tweet.created_at.strftime('%Y/%m/%d') %><br>
        <% if @tweet.user == current_user %>
          <%= link_to "編集", edit_tweet_path(@tweet),class: "btn btn-outline-success btn-sm" %>&emsp;
          <%= link_to "削除", tweet_path(@tweet), method: :delete,data: { confirm: '削除しますか？' },class: "btn btn-outline-danger btn-sm" %>
        <% end %>
      </div>
    </div>
    <div class="col-sm-5 row align-items-end">
      <!--コメント機能-->
      <div id="comment_area">
        <%= render "public/comments/comment", tweet: @tweet, comment: @comment %>
      </div>
    </div>
  </div>
</div>
