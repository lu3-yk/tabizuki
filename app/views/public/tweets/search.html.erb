<div class="container">
  <div class="row mt-5">
    <div class="col">
      <h1 class="text-center"><%= "#{@prefecture.name}の投稿一覧" %></h1>
    </div>
    <div class="d-flex align-content-around flex-wrap col-12">
      <% @tweets.each do |tweet| %>
        <div class="card-deck" style="width:290px;">
          <div class="card">
            <div class="text-center mt-2">
              <%= link_to tweet_path(tweet.id) do %>
                <%= image_tag tweet.get_image(250,250) %>
              <% end %>
            </div>
            <div class="card-body">
              <h6 class="card-title">
                <%= link_to user_path(tweet.user.id) do %>
                  <%= image_tag tweet.user.get_profile_image(50,50), class: "user-icon" %>
                  <%= tweet.user.name %>
                <% end %>
              </h6>
              <h5 class="card-subtitle"><%= tweet.title %></h5>

              <div class="d-flex justify-content-end">
              <!--いいね機能-->
                <div id = "like_btn_<%= tweet.id %>">
                  <%= render "public/likes/likes", tweet: tweet %>
                </div>
                <%#= link_to "#{tweet.comments.count} ", tweet_path(tweet.id) %>
                <!--コメント機能-->
                <div>
                  <%= link_to tweet_path(tweet.id) do %>
                    <i class="far fa-comment fa-2x"></i><%= tweet.comments.count %>
                  <% end %>
                </div>
                <%= link_to "詳細", tweet_path(tweet.id) %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>