<div class="container-fluid">
  <div class="row mt-4">
    <div class="col-12">
      <h1 class="text-center"><%= "#{@prefecture.name}の投稿一覧" %></h1>
    </div>
  </div>
    <% if @tweets.exists? %>
      <div class="row justify-content-center">
        <div class="d-flex flex-wrap col-9 pl-5">
            <% @tweets.each do |tweet| %>
              <div class="card-deck ml-1 mb-1" style="width:310px;">
                <div class="card shadow">
                  <div class="text-center mt-2">
                    <%= link_to tweet_path(tweet.id) do %>
                      <%= image_tag tweet.get_image(260,240) %>
                    <% end %>
                  </div>
                  <div class="card-body">
                    <h6 class="card-title">
                      <%= link_to user_path(tweet.user.id) do %>
                        <%= image_tag tweet.user.get_profile_image(50,50), class: "user-icon" %>
                        <%= tweet.user.name %>
                      <% end %>
                      <p class="text-right"><%= tweet.prefecture.name %></p>
                    </h6>
                    <h5 class="card-subtitle"><%= tweet.title %></h5>

                    <div class="d-flex justify-content-end">
                    <!--いいね機能-->
                      <div id = "like_btn_<%= tweet.id %>">
                        <%= render "public/likes/likes", tweet: tweet %>&emsp;
                      </div>
                      <%#= link_to "#{tweet.comments.count} ", tweet_path(tweet.id) %>
                      <!--コメント機能-->
                      <div>
                        <%= link_to tweet_path(tweet.id) do %>
                          <i class="far fa-comment fa-2x comment"></i><%= tweet.comments.count %>&emsp;
                        <% end %>
                      </div>
                      <%= link_to "詳細", tweet_path(tweet.id) %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
        </div>
      </div>
    <% else %>
      <div class="mt-5">
        <p class="text-center">投稿はありません</p>
      </div>
    <% end %>
</div>