<% if tweet.liked_by?(current_user) %>
  <p>
    <%= link_to tweet_likes_path(tweet), method: :delete do %>
      ♥<%= tweet.likes.count %>
    <% end %>
  </p>
<% else %>
  <p>
    <%= link_to tweet_likes_path(tweet), method: :post do %>
      ♡<%= tweet.likes.count %>
    <% end %>
  </p>
<% end %>