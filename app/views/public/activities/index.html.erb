<div class="container">
  <div class="row text-center">
    <div class="col">
      <% if @activities.present? %>
        <% @activities.each do |activity| %>
          <% if activity.read? %>
           <%= link_to read_user_activity_path(current_user,activity), method: :patch do %>
              <%= image_tag activity.subject.user.get_profile_image(150,150),class: "user-icon" %><%= activity.subject.name %>さんが<%= activity.action_type_i18n %>既読
            <% end %>
    </div>
  </div>
  <div class="row text-center">
    <div class="col">
          <% else %>
            <%= link_to read_user_activity_path(current_user,activity), method: :patch do %>
              <%= image_tag activity.subject.user.get_profile_image(150,150),class: "user-icon" %><%= activity.subject.name %>さんが<%= activity.action_type_i18n %>
            <% end %>
          <% end %>
        <% end %>
        <%= paginate @activities %>
    </div>
  </div>
      <% else %>
        <p>通知はありません</p>
      <% end %>
  </div>
</div>
