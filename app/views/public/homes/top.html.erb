            <%= link_to "ログイン", new_user_session_path, class: "btn btn-outline-dark" %>&emsp;
            <%= link_to "新規登録", new_user_registration_path, class: "btn btn-outline-dark" %>
          </div>
          <div class="mt-3">
            <%= link_to 'ゲストログイン（閲覧用）', user_guest_sign_in_path, class: "btn btn-secondary btn-sm my-3 sign_in", method: :post %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

