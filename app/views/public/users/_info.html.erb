<div>
  <table>
    <tr>
      <td><%= image_tag current_user.get_profile_image(100,100) %></td>
    </tr>
    <tr>
      <td><%= user.name %></td>
    </tr>
    <tr>
      <td><%= user.introduction %></td>
    </tr>
    <tr>
      <td>
        <%= link_to user_path(current_user.id) do %>
          <i class="fas fa-user"></i>
        <% end %>
        <%= link_to edit_user_path(current_user.id) do %>
          <i class="fas fa-cog"></i>
        <% end %>
      </td>
    </tr>
  </table>
</div>