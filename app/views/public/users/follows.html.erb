<div class="container">
  <div class="row mt-5">
    <div class="col">
      <h1 class="text-center">フォロー</h1>
      <% if @users.exists? %>
        <table class="table table-hover mt-3">
          <thead>
            <tr>
              <th style="width: 20%"></th>
              <th style="width: 20%">ユーザー名</th>
              <th style="width: 40%">自己紹介</th>
              <th style="width: 20%"></th>
            </tr>
          </thead>
          <% @users.each do |user| %>
          <tbody>
            <tr>
              <td style='height: 110px'>
                <%= link_to user_path(user.id) do %>
                  <%= image_tag user.get_profile_image(50,50), class: "user-icon" %><br>
                <% end %>
              </td>
              <td style='height: 110px'>
                <%= link_to user_path(user.id) do %>
                  <%= user.name %>
                <% end %>
              </td>
              <td style="word-wrap:break-word; height: 110px"><%= user.introduction %></td>
              <td  style='height: 110px'><%= render "public/relationships/follow_btn", user: user %></td>
            </tr>
          </tbody>
          <% end %>
        </table>
      <% else %>
         <div class="mt-5">
          <p class="text-center">ユーザーはいません</p>
        </div>
      <% end %>
    </div>
  </div>
</div>