<div class="container">
  <div class="row mt-5">
    <div class="col-3">
      <!-- ユーザーの詳細 -->
      <table>
        <tr>
          <td colspan=2>
            <%= image_tag @user.get_profile_image(150,150), class: "user-icon-mypage" %>
          </td>
        <tr class="h3">
          <td colspan=2><%= @user.name %></td>
        </tr>
        <tr>
          <td colspan=2><%= @user.introduction %></td>
        </tr>
        <tr>
          <td>
           <%= link_to follows_user_path(@user) do %>
            フォロー<%= @following_users.count %>
           <% end %>
          </td>
          <td>
           <%= link_to followers_user_path(@user) do %>
             フォロワー<%= @follower_users.count %>
           <% end %>
          </td>
        </tr>
        <tr colspan=2>
          <td>
            <%= link_to likes_user_path(@user) do %>
              <i class="fas fa-grin-hearts fa-2x"></i>をした投稿一覧
            <% end %>
          </td>
        </tr>
        <tr>
          <td colspan=2>
            <% if user_signed_in? && @user == current_user %>
              <%= link_to edit_user_path(current_user.id) do %>
                プロフィール編集<i class="fas fa-cog"></i>
              <% end %>
            <% end %>
            <!--フォローボタン  -->
            <%= render "public/relationships/follow_btn", user: @user %>

          </td>
        </tr>
      </table>
    </div>

    <!-- ユーザーの投稿一覧 -->
    <div class="d-flex align-content-around flex-wrap col-9">
      <% @tweets.each do |tweet| %>
        <div class="card" style="width: 18rem;">
          <div class="bd-placeholder-img card-img-top" width="100%" height="180" preserveAspectRatio="xMidYMid slice" focusable="false" role="img">
              <%= link_to tweet_path(tweet.id) do %>
                <%= image_tag tweet.get_image(280,280) %>
              <% end %>
          </div>
          <div class="card-body d-flex align-items-center ">
              <%= tweet.prefecture.name %>　
              <!--いいね機能-->
              <div id = "like_btn_<%= tweet.id %>">
                <%= render "public/likes/likes", tweet: tweet %>
              </div>　
              <!--コメント機能-->
              <%= link_to tweet_path(tweet.id) do %>
                <i class="far fa-comment fa-2x"></i><%= tweet.comments.count %>
              <% end %>　　
              <%= link_to "詳細", tweet_path(tweet.id) %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

