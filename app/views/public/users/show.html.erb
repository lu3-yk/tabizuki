<div class="container">
  <div class="row mt-5">
    <div class="col-3">
      <!-- ユーザーの詳細 -->
      <table>
        <tr>
          <td colspan=2>
            <%= image_tag @user.get_profile_image(150,150), class: "user-icon-mypage" %>
          </td>
        <tr>
          <td colspan=2><%= @user.name %></td>
        </tr>
        <tr>
          <td colspan=2><%= @user.introduction %></td>
        </tr>
        <tr>
          <td>フォロー</td>
          <td>フォロワー</td>
        </tr>
        <tr colspan=2>
          <td>いいねした投稿</td>
        </tr>
        <tr>
          <td colspan=2>
            <%= link_to edit_user_path(current_user.id) do %>
              プロフィール編集<i class="fas fa-cog"></i>
            <% end %>
          </td>
        </tr>
      </table>
    </div>

    <!-- ユーザーの投稿一覧 -->
    <div class="d-flex align-content-around flex-wrap col-9">
      <% @tweets.each do |tweet| %>
        <div>
          <%= link_to tweet_path(tweet.id) do %>
            <%= image_tag tweet.get_image(300,300) %>
          <% end %>
          <p>都道府県</p>

            <%= link_to "💬 #{tweet.comments.count} ", tweet_path(tweet.id) %>
            <!--いいね機能-->
            <div id = "like_btn_<%= tweet.id %>">
              <%= render "public/likes/likes", tweet: tweet %>
            </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
