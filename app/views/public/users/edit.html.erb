<div class="container">
  <div class="row mt-4">
    <div class="col">
      <h2 class="text-center">プロフィールを編集</h2>
    </div>
  </div>
  <div class="row mt-5">
    <div class="mx-auto">
      <%= form_with model: @user do |f| %>
        <!--エラーメッセージ-->
        <%= render 'layouts/error_message', model: f.object %>
        <table class="table table-row table-borderless">
          <tr>
            <th>プロフェール写真を変更</th>
            <td><%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %></td>
          </tr>
          <tr>
            <th>名前</th>
            <td><%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%></td>
          </tr>
          <tr>
            <th>メールアドレスを変更</th>
            <td><%= f.email_field :email, autocomplete: "email" %></td>
          </tr>
          <tr>
            <th>自己紹介文を変更</th>
            <td><%= f.text_area :introduction,size: "30x5",class: "form-control" %></td>
          </tr>
        </table>
        <div class="text-center">
          <%= f.submit "変更を保存",class: "btn btn-outline-dark" %>
        </div>
      <% end %>
      <div class="text-center mt-5">
        <%= link_to "退会したい方はこちら", unsubscribe_path, class: "btn btn-outline-danger btn-sm" %>
      </div>
    </div>
  </div>
</div>
