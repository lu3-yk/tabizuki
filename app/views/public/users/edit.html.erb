<h1>プロフィール編集</h1>
<%= form_with model: @user do |f| %>
  <label for="inputName">名前</label>
    <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
  <label for="inputImage">プロフェール写真を変更</label>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
  <%= f.label :introduction %>
        <%= f.text_area :introduction, class: "form-control introduction" %>
  <%= f.submit "変更を保存" %>
<% end %>
