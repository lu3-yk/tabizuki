<div class="container">
  <div class="row mt-4">
    <div class="col-sm-3">
      <!-- ユーザーの詳細 -->
      <table class="table table-bordered text-center", style="background-color: #fffaf0;">
        <tr>
          <td colspan=4>
            <%= image_tag @user.get_profile_image(150,150), class: "user-icon-mypage" %>
          </td>
        <tr>
          <td colspan=4>ユーザー名：<%= @user.name %></td>
        </tr>
        <tr>
          <td colspan=4>自己紹介文：<%= @user.introduction %></td>
        </tr>
        <tr>
          <td>
            フォロー<%= @user.following_user.count %>
            フォロワー<%= @user.follower_user.count %>
          </td>
        </tr>
        <tr>
          <td>
            <%=link_to edit_admin_user_path(@user.id) do%>
              <%= @user.name%>さんの情報を編集する
            <% end %>
          </td>
        </tr>
      </table>
    </div>

    <!-- ユーザーの投稿一覧 -->
    <div class="d-flex align-content-around flex-wrap col-sm-9">
      <% @tweets.each do |tweet| %>
        <div class="card shadow mr-lg-2 mb-2" style="width: 13rem;">
          <div class="bd-placeholder-img card-img-top" width="100%" height="180" preserveAspectRatio="xMidYMid slice" focusable="false" role="img">
            <%= link_to admin_tweet_path(tweet) do %>
              <%= image_tag tweet.get_image(400,400),size: "205x200" %>
            <% end %>
          </div>
          <div class="card-body ">
            <h5 class="card-title"><%= tweet.title %></h5>
          </div>
        </div>
      <% end %>
    </div>
  </div>

