<div class="container">
  <div class="row mt-5">
    <div class="col-3">
      <!-- ユーザーの詳細 -->
      <table class="table table-bordered">
        <tr>
          <td colspan=4>
            <%= image_tag @user.get_profile_image(150,150), class: "user-icon-mypage" %>
          </td>
        <tr>
          <td colspan=4>ユーザー名：<%= @user.name %></td>
        </tr>
        <tr>
          <td colspan=4>自己紹介文：<%= @user.introduction %></td>
        </tr>
        <tr>
          <td>
            フォロー<%= @user.following_user.count %>
            フォロワー<%= @user.follower_user.count %>
          </td>
        </tr>
        <tr>
          <td>
            <%=link_to edit_admin_user_path(@user.id) do%>
              <%= @user.name%>さんの編集をする
            <% end %>
          </td>
        </tr>
      </table>
    </div>

    <!-- ユーザーの投稿一覧 -->
    <div class="d-flex align-content-around flex-wrap col-9">
      <% @tweets.each do |tweet| %>
        <div class="card" style="width: 18rem;">
          <div class="bd-placeholder-img card-img-top" width="100%" height="180" preserveAspectRatio="xMidYMid slice" focusable="false" role="img">
              <%= link_to tweet_path(tweet.id) do %>
                <%= image_tag tweet.get_image(200,200) %>
              <% end %>
          </div>
          <div class="card-body ">
            <h5 class="card-title"><%= tweet.title %></h5>
            <p class="card-text"><%= tweet.body %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>

