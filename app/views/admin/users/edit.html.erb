<div class="container">
  <div class="row mt-5">
    <div class="col">
      <h1 class="text-center"><%= @user.name %>さんのプロフィールを編集</h1>
    </div>
  </div>
  <div class="row mt-5">
    <div class="mx-auto">
      <%= form_with model: @user, url: admin_user_path(@user) do |f| %>
        <table class="table table-borderless text-center">
          <tr>
            <th>プロフェール写真</th>
            <td><%= image_tag @user.get_profile_image(50,50), class: "user-icon" %></td>
          </tr>
          <tr>
            <th>名前を変更</th>
            <td><%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%></td>
          </tr>
          <tr>
            <th>メールアドレスを変更</th>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          </tr>
        </table>
        <div class="text-center">
          <%= f.submit "変更を保存" %>
        </div>
      <% end %>
      <div class="text-center mt-5">
        <%= link_to "会員一覧画面へ戻る", admin_users_path, class: "btn btn-outline-dark" %>　&emsp;
        <% if !@user == @user.is_deleted %>
          <%= link_to "退会させる", unsubscribe_admin_user_path(@user), class: "btn btn-outline-danger" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
